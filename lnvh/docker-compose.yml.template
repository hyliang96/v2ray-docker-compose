version: '3'

services:
  # v2ray
  v2ray:
    image: v2fly/v2fly-core:latest
    container_name: v2ray
    restart: always
    networks:
      - v2ray
    volumes:
      - ./v2ray:/etc/v2ray
      - ./v2ray/log:/etc/v2ray/log/v2ray
      - ./tmp1:/tmp1
      - ./resolv.conf:/etc/resolv.conf

  # web server
  nginx:
    image: nginx:alpine
    container_name: nginx
    restart: always
    networks:
      - v2ray
    ports:
      - "80:80"
    volumes:
      # root
      - ./nginx/www:/usr/share/nginx/html
      - ./nginx/conf.d:/etc/nginx/conf.d
      - ./nginx/log:/var/log/nginx
  
  #certbot
  certbot:
    depends_on:
      - nginx
    image: certbot/certbot
    container_name: certbot
    network_mode: host
    volumes:
      - ./certbot-etc:/etc/letsencrypt
      - ./nginx/www:/var/www/html
    command: certonly --webroot --webroot-path=/var/www/html --email youremail --agree-tos --no-eff-email --force-renewal -d example.com 

  haproxy:
    image: haproxy:latest
    container_name: haproxy
    restart: always
    networks:
      - v2ray
    volumes:
      - ./haproxy/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro
      - ./certbot-etc:/etc/ca
      - ./tmp1:/tmp1
    ports:
      - "443:443"
    links:
      - v2ray
      - nginx

networks:
  v2ray:
